 <section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Users</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <p style="padding: 10px;">Current users in the system</p>

            <table class="table table-hover">
              <thead>
                <tr>
                  <th></th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Stripe customer</th>
                  <th>Role</th>
                </tr>
              </thead>
              <tbody>
            <%= for user <- @users do %>
                <tr>
                  <td>
                    <span><%= link "Show", to: admin_user_path(@conn, :show, user), class: "btn btn-info btn-xs" %></span>
                    <span><%= link "Edit", to: admin_user_path(@conn, :edit, user), class: "btn btn-warning btn-xs" %></span>
                    <span><%= link "Delete", to: admin_user_path(@conn, :delete, user), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
                  </td>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td>
                    <%= stripe_customer_link(user) %>
                  </td>
                  <td><%= role_name(user.role) %></td>
                </tr>
            <% end %>
              </tbody>
            </table>

        </div>
<div class="box-footer clearfix">
<div class="pull-right">
  <%= pagination_links @users %>
  </div>
            </div>        
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
  </div>
</section>
          <!-- /.box -->
