<div class="row row-cards row-deck">
    <div class="col-12">
        <%= if get_flash(@conn, :info) do %>
        <p class="alert alert-info" role="alert"><%= get_flash(@conn, :info) %></p>
      <% end %>
      <%= if get_flash(@conn, :error) do %>
        <p class="alert alert-danger" role="alert"><%= get_flash(@conn, :error) %></p>
      <% end %>
      <div class="card">
        <div class="table-responsive">
          <table class="table table-hover table-outline table-vcenter text-nowrap card-table">
            <thead>
              <tr>
                <th>Date</th>
                <th>Source</th>
                <th class="text-center"><i class="icon-settings"></i> Action</th>
              </tr>
            </thead>
            <tbody>
            <%= for detail <- @details do %>
                <tr>
                  <td><%= order_timestamp(detail.inserted_at) %></td>
                  <td><%= detail.source %></td>
                  <td class="text-right">
                    <%= link "View", to: backend_webhook_path(@conn, :show, detail), class: "btn btn-secondary btn-sm" %>
                  </td>
                </tr>
            <% end %>
            </tbody>
            <tfoot>
              <td colspan="5" class="text-right" align="right">
                <div class="pull-right">
                  <%= pagination_links @details %>
                </div>
              </td>
             </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
