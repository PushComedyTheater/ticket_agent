<%= form_for @changeset, @action, [class: "card"], fn f -> %>
  <div class="card-header">
    <h3 class="card-title">Edit teacher</h3>
  </div>
  <div class="card-body">
      <%= if @changeset.action do %>
        <div class="alert alert-danger">
          <p>Oops, something went wrong! Please check the errors below.</p>
        </div>
      <% end %>
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <%= label f, :name, class: "control-label" %>
          <%= text_input f, :name, class: "form-control" %>
          <%= error_tag f, :name %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <%= label f, :email, class: "control-label" %>
          <%= text_input f, :email, class: "form-control" %>
          <%= error_tag f, :email %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <%= label f, :biography, class: "control-label" %>
          <%= textarea(f, :biography, class: "ckeditor", cols: 80, rows: 10) %>
          <%= error_tag f, :biography %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <%= label f, :twitter, class: "control-label" %>
          <%= text_input f, :twitter, name: "teacher[social][twitter]", value: f.data.social["twitter"], class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <%= label f, :facebook, class: "control-label" %>
          <%= text_input f, :facebook, name: "teacher[social][facebook]", value: f.data.social["facebook"], class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <%= submit "Submit", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
