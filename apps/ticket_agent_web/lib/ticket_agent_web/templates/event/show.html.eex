<style type="text/css">
  #main_container {
    background-color: #ededed;
  }
</style>
<div id="photoParent" style="background: url('<%= load_event_image(@event) %>') no-repeat; background-size: 100%; min-height: 450px; background-size: cover; opacity: 0.8; border-bottom: 1px solid 000;">
</div>
<section class="g-bg-blue-opacity-0_7 g-py-50 g-px-30 u-shadow-v1-5" style="margin-bottom: 5px;">
  <div class="container" style="border: 1px">
    <div class="row">
      <div class="col-md-9 align-self-center" style="margin-top: -20px;">
        <h2 class="h1" style="color: #fff;"><%= @event.title %></h2>
        <p class="lead g-mb-20 g-mb-0--md" style="color: #fff;">
        <%= if Enum.count(@listings) > 0 do %>
          <%= render "shared/_ticket_price.html", assigns %>
        <% end %>
        <%= render "shared/_listing_dates.html", listings: @listings %>
        <%= render "shared/_tags.html", assigns %>
      </div>
      <div class="col-md-3 align-self-center text-md">
        <%= if Enum.count(@listings) == 0 do %>
          <%= render "shared/_ended.html", assigns %>
        <% else %>
          <%= render "shared/_live.html", assigns %>
        <% end %>
        <%= if get_flash(@conn, :error) do %>
          <p class="alert alert-danger rounded" role="alert"><%= get_flash(@conn, :error) %></p>
        <% end %>
      </div>
    </div>
  </div>
</section>
<section class="container g-pt-20 g-pb-40" style="background-color: #fff; ">
  <div class="row g-mb-70">
    <div class="col-md-8 g-mb-30">
      <div class="mb-5">
        <%= if Coherence.logged_in?(@conn) do %>
          <%= render "shared/_previous_purchase.html", assigns %>
        <% end %>
        <h4 class="g-color-black mb-1">About This Show</h4>
        <hr />
        <p class="lead g-mb-20 g-mb-0--md"><%= raw @event.description %></p>        
      </div>
    </div>
    <div class="col-md-4 g-mb-50">
      <%= render "shared/_sharing.html", assigns %>
    </div>    
  </div>
</section>
<br />