<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :title, class: "control-label" %>
    <%= text_input f, :title, class: "form-control" %>
    <%= error_tag f, :title %>
  </div>

  <div class="form-group">
    <%= label f, :type, class: "control-label" %>
    <%= select f, :type, @class_types, selected: f.data.type, prompt: "None" %>
    <%= error_tag f, :prerequisite %>
  </div>

  <div class="form-group">
    <%= label f, :description, class: "control-label" %>
    <%= textarea(f, :description, class: "ckeditor", cols: 80, rows: 10) %>
    <%= error_tag f, :description %>
  </div>

  <div class="form-group">
    <%= label f, :prerequisite, class: "control-label" %>
    <%= select f, :prerequisite_id, @classes, selected: f.data.prerequisite_id, prompt: "None" %>
    <%= error_tag f, :prerequisite %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
