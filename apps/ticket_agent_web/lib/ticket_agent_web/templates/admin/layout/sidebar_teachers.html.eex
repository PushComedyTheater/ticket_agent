<li class="<%= treeview_root(@conn, "teachers") %>">
  <a href="#">
    <span class="glyphicon glyphicon-user"></span>
    <span>Teachers</span>
    <span class="pull-right-container">
      <i class="fa fa-angle-left pull-right"></i>
    </span>
  </a>
  <ul class="treeview-menu">
    <li<%= raw treeview_action(@conn, "teachers_index") %>>
      <%= link to: admin_teacher_path(@conn, :index) do %>
        <i class="fa fa-list"></i> <span>List</span>
      <% end %>
    </li>
    <li<%= raw treeview_action(@conn, "teachers_new") %>>
      <%= link to: admin_teacher_path(@conn, :new) do %>
        <i class="fa fa-plus"></i> <span>New</span>
      <% end %>
    </li>    
  </ul>
</li>