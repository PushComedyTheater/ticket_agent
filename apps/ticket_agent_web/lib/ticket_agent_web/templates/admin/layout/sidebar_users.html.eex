<li class="<%= treeview_root(@conn, "users") %>">
  <a href="#">
    <i class="fa fa-user"></i>
    <span>Users</span>
    <span class="pull-right-container">
      <i class="fa fa-angle-left pull-right"></i>
    </span>
  </a>
  <ul class="treeview-menu">
    <li<%= raw treeview_action(@conn, "users_index") %>>
      <%= link to: admin_user_path(@conn, :index) do %>
        <i class="fa fa-list"></i> <span>List</span>
      <% end %>
    </li>
    <li<%= raw treeview_action(@conn, "users_new") %>>
      <%= link to: admin_user_path(@conn, :new) do %>
        <i class="fa fa-plus"></i> <span>New</span>
      <% end %>
    </li>
  </ul>
</li>
