  <aside class="main-sidebar">

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">

      <!-- Sidebar user panel (optional) -->
      <div class="user-panel">
        <div class="pull-left image">
          <img src="https://cdn.pushcomedytheater.com/images/default-avatar-160.png" class="user-image" alt="User Image">
        </div>
        <div class="pull-left info">
          <p><%= Coherence.current_user_name(@conn) %></p>
          <!-- Status -->
        </div>
      </div>

      <!-- Sidebar Menu -->
      <ul class="sidebar-menu" data-widget="tree">

        <li class="header">CLASSES</li>
        <li class="active">
          <%= link to: admin_class_path(@conn, :index) do %>
            <i class="fa fa-link"></i> <span>List</span>
          <% end %>
        </li>
        <li>
          <%= link to: admin_class_path(@conn, :new) do %>
            <i class="fa fa-plus"></i> <span>New</span>
          <% end %>
        </li>
        <li class="header">SHOWS</li>
        <li>
          <%= link to: admin_event_path(@conn, :index) do %>
            <i class="fa fa-link"></i> <span>View Current</span>
          <% end %>
          </a>
        </li>
        <li>
          <%= link to: admin_event_path(@conn, :index) do %>
            <i class="fa fa-plus"></i> <span>New</span>
          <% end %>
          </a>
        </li>
        <li class="header">TEACHERS</li>
        <li>
          <%= link to: admin_teacher_path(@conn, :index) do %>
            <span class="glyphicon glyphicon-user"></span>
            <span>View</span>
          <% end %>
          </a>
        </li>
      </ul>
      <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
  </aside>

  <!-- /.control-sidebar -->
  <!-- Add the sidebar's background. This div must be placed
  immediately after the control sidebar -->
  <div class="control-sidebar-bg"></div>
