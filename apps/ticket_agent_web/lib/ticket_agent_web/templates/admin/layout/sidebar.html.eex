  <aside class="main-sidebar">

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">

      <!-- Sidebar user panel (optional) -->
      <div class="user-panel">
        <div class="pull-left image">
          <img src="https://cdn.pushcomedytheater.com/images/default-avatar-160.png" class="user-image" alt="User Image">
        </div>
        <div class="pull-left info">
          <p><%= Coherence.current_user_name(@conn) %></p>
          <!-- Status -->
        </div>
      </div>

      <!-- Sidebar Menu -->
      <ul class="sidebar-menu" data-widget="tree">
        <%= render "sidebar_teachers.html", assigns %>
        <%= render "sidebar_classes.html", assigns %>
        <%= render "sidebar_shows.html", assigns %>
        <%= render "sidebar_users.html", assigns %>
      </ul>
      <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
  </aside>

  <!-- /.control-sidebar -->
  <!-- Add the sidebar's background. This div must be placed
  immediately after the control sidebar -->
  <div class="control-sidebar-bg"></div>
