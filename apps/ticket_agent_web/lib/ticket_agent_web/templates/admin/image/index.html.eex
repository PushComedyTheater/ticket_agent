<table width="100%" height="100%">
  <%= for row <- Enum.chunk_every(@resources, 5) do %>
  <tr>
    <%= for item <- row do %>
      <td align="center" style="border: 1px solid #d2d2d2;">
        <a href="#" onclick="window.opener.set_image('<%= @tag %>','<%= item["secure_url"] %>', '<%= item["secure_url"] %>'); self.close();">
          <img src="<%= Cloudinex.Url.for(item["public_id"], %{width: 150}) %>" />
          <br />
          SELECT
        </a>
      </td>
    <% end %>
  </tr>
  <% end %>
  <tfoot>
    <tr>
      <th align="center" colspan="5">
        <a href="?pc=<%= @previous_cursor %>&tag=<%= @tag %>">Previous</a>
        <a href="?pc=<%= @previous_cursor %>&nc=<%= @next_cursor %>&tag=<%= @tag %>">Next</a>
      </th>
    </tr>
  </tfoot>
</table>
