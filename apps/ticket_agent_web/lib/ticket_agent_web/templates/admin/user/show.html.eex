<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title"><%= @user.name %></h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <table class="table table-bordered">
      <tr>
        <th>Name:</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>Email:</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th>Stripe customer:</th>
        <td><%= @user.stripe_customer_id %></td>
      </tr>
      <tr>
        <th>Role:</th>
        <td><%= @user.role %></td>
      </tr>
    </table>
  </div>
</div>
<span><%= link "Edit", to: admin_user_path(@conn, :edit, @user) %></span>
<span><%= link "Back", to: admin_user_path(@conn, :index) %></span>
