<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">Orders</h3>
    <div class="box-tools">
      <div class="input-group input-group-sm" style="width: 150px;">
        <input type="text" id="table_search" name="table_search" class="form-control pull-right" placeholder="Search">
        <div class="input-group-btn">
          <button id="btn_search" type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
        </div>
      </div>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <table class="table table-bordered">
      <tr>
        <th style="width: 150px"></th>
        <th>Name</th>
        <th>Status</th>
        <th>Total</th>
      </tr>
      <%= for context <- @orders do %>
      <tr>
        <td>
          <span><%= link "Show", to: admin_order_path(@conn, :show, context), class: "btn btn-info btn-xs" %></span>
          <span><%= link "Edit", to: admin_order_path(@conn, :edit, context), class: "btn btn-warning btn-xs" %></span>
        </td>
        <td><%= context.user.name %></td>
        <td><%= context.status %></td>
        <td>$<%= cost(context.total_price / 100) %>
      </tr>
      <% end %>
    </table>
  </div>
  <div class="box-footer clearfix">
    <div class="pull-right">
      <%= pagination_links @orders %>
    </div>
  </div>
<!-- /.box-body -->
</div>
